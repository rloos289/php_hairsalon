<html>
    <head>
        <meta charset="utf-8">
        <link href='/css/bootstrap.min.css' rel='stylesheet' type='text/css'>
        <link href='/css/styles.css' rel='stylesheet' type='text/css'>
        <title>Styles</title>
    </head>
    <body>
        <div class="container">
            <div class="home">
                <h1>Welcome</h1>
                <form action="/" method="post">
                    <h3>Please enter the name of a new stylist</h3>
                    <input type="text" name="stylist_input" value="" required>
                    <button type="submit" name="button" class="btn btn-success">Submit</button>
                </form>
                <form action='/clear'>
                    <button type="submit" name="button" class="btn btn-danger">Clear all</button>
                </form>
                {% if stylists is not empty %}
                <h2>Stylists</h2>
                <ul>
                {% for stylist in stylists %}
                    <li><a href='/stylist/{{ stylist.getiD}}'>{{ stylist.getName }}</a></li>
                {% endfor %}
                </ul>
                {% endif %}
            </div>
        </div>
  </body>
</html>
