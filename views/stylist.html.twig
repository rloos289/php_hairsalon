<html>
  <head>
    <title>Styles</title>
  </head>
  <body>
     <h1>Welcome to {{ stylist.getName}}'s page</h1>
     {% if clients is not empty %}
     <h3>client list:</h3>
       {% for client in clients %}
       <ul>
        <li>{{client.getName}}
         <a href="/editclient/{{ client.getId }}"<button type="button" name="button">Edit this clients information</button></a></li>
       </ul>
     {% endfor %}
     {% else %}
     <p>{{ stylist.getName}} currently has no clients</p>
     {% endif %}
     <form action="/stylist/{{ stylist.getiD}}" method="post">
        <label for="">client name: </label>
        <input type="text" name="add_client" value="">
        <button type="submit" name="button">add client</button>
     </form>
     <a href="/"><button type="button" name="button">Home</button></a>
     <form action="/stylist/{{ stylist.getId }}" method="post">
       <input type="hidden" name="_method" value="delete">
      <button type="submit" name="button">Delete this stylist</button>
     </form>
  </body>
</html>
